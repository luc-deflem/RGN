rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Users can only access their own files
    match /users/{userId}/{allPaths=**} {
      // Allow read/write only if the authenticated user matches the path owner
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow read access to public recipe images (if needed for family sharing)
    match /recipe-images/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null; // Users can upload recipe images
    }
    
    // Deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}