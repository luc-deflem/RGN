{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "RGimages/**",
      "local-ai-config.js",
      "recipe-ai-exporter.js",
      "extract-products.js",
      "analyzed-recipes/**",
      "local-config/**",
      "local-credentials/**",
      "temp-ai-analysis/**",
      "ai-temp-*",
      "api-keys.js",
      "credentials.json",
